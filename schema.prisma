// schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model visited {
  user_id    String    @unique
  user       String
  content    String
  polygons   String
  date       DateTime
}

model lieux {
  id            Int      @id @default(autoincrement())
  code_postal   String
  code_commune  String
  nom_ebt       String
  nom_commune   String
  ref_user      String
}

model translations {
  id            String      @id
  namespace     String
  key           String
  fr            String
}

model roles {
  id            String      @id
  admin         Boolean
  trans         String
}