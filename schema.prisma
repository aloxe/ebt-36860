// schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model users {
  id          String    @unique
  username    String
  date        DateTime
  sessionid   String
  my_city     String
  my_country  String
  my_flag     String
  my_zip      String
  totalbills  Int
  totalhits   Int
}

model players {
  id         String    @unique
  user       String
  content    String
  polygons   String
  date       DateTime
}

model visited {
  user_id    String    @unique
  user       String
  content    String
  polygons   String
  date       DateTime
}

model lieux {
  id            Int      @id @default(autoincrement())
  code_postal   String
  code_commune  String
  nom_ebt       String
  nom_commune   String
  ref_user      String
}

model visits {
  user_id       String      @id
  date          DateTime
  cities        String
  fr            String
}

model counts {
  user_id       String      @id
  date          DateTime
  communes      String
  departements  String
  prefectures   String
  unknowns      String
  count         String
}

model polygons {
  user_id       String      @id
  date          DateTime
  polygons      String
}

model translations {
  id            String      @id
  namespace     String
  key           String
  fr            String?
  de            String?
}

model roles {
  id            String      @id
  admin         Boolean
  trans         String?
}